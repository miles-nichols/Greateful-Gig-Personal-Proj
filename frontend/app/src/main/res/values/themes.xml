<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Dark Forest Green, Sage Green, and Sparkle Gold -->
    <style name="Theme.GratefulGig" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color: Dark Forest Green -->
        <item name="colorPrimary">@color/dark_forest_green</item>
        <item name="colorPrimaryVariant">@color/dark_forest_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color: Sage Green -->
        <item name="colorSecondary">@color/sage_green</item>
        <item name="colorSecondaryVariant">@color/sage_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
    </style>

    <!-- NoActionBar theme for activities without an action bar -->
    <style name="Theme.GratefulGig.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar Overlay for dark action bars -->
    <style name="Theme.GratefulGig.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup Overlay for light popups -->
    <style name="Theme.GratefulGig.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
